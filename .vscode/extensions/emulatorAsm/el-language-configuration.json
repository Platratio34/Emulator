{
    "comments": {
        "lineComment": {
            "comment": "//"
        },
        "blockComment": ["/*","*/"]
    },
    "brackets": [
        ["(",")"],
        ["{","}"],
        ["[","]"]
    ],
    "autoClosingPairs": [
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "(",
            "close": ")",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "[",
            "close": "]",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "{",
            "close": "}",
            "notIn": [
                "string"
            ]
        }
    ],
    "autoCloseBefore": ";:.,=}])}>` \n\t",
    "surroundingPairs": [
        [
            "\"",
            "\""
        ],
        [
            "(",
            ")"
        ],
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "<",
            ">"
        ]
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\"\\,\\.\\<\\>\\/\\?\\s]+)"
}